{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
      "node_modules/**/*.d.ts",
      "src/**/*.d.ts"
    ]
  }